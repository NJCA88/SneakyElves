generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  name      String
  password  String
  isAdmin   Boolean    @default(false)
  groupId   Int?
  group     Group?     @relation(fields: [groupId], references: [id])
  wishlists Wishlist[]
  secretSantaGiving SecretSanta[] @relation("SecretSantaGiver")
  secretSantaReceiving SecretSanta[] @relation("SecretSantaReceiver")
}

model Group {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  users     User[]
  createdAt DateTime @default(now())
}

model Wishlist {
  id        Int      @id @default(autoincrement())
  title     String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  items     Item[]
  createdAt DateTime @default(now())
}

model Item {
  id          Int      @id @default(autoincrement())
  name        String
  url         String?
  imageUrl    String?
  price       Float?
  purchased   Boolean  @default(false)
  wishlistId  Int
  wishlist    Wishlist @relation(fields: [wishlistId], references: [id])
  purchasedBy Int?
}

model SecretSanta {
  id         Int      @id @default(autoincrement())
  giverId    Int
  receiverId Int
  role       String   // "santa" or "elf"
  year       Int
  active     Boolean  @default(true)
  createdAt  DateTime @default(now())
  
  giver      User     @relation("SecretSantaGiver", fields: [giverId], references: [id])
  receiver   User     @relation("SecretSantaReceiver", fields: [receiverId], references: [id])
  
  @@unique([giverId, receiverId, year, role])
}
